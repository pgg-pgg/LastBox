<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <com.example.pgg.qboxdemo.widget.TabBar_Main
        android:id="@+id/recommend_main"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:visibility="visible"
        app:icon="@drawable/tabbar_main_news"
        app:name="@string/news"/>
    <com.example.pgg.qboxdemo.widget.TabBar_Main
        android:id="@+id/cityfinder_mains"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:icon="@drawable/tebbar_mains_wechat"
        app:name="@string/wechat">
    </com.example.pgg.qboxdemo.widget.TabBar_Main>

    <com.example.pgg.qboxdemo.widget.TabBar_Main
        android:id="@+id/findtravel_mains"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:icon="@drawable/tebbar_mains_find"
        app:name="@string/find">
    </com.example.pgg.qboxdemo.widget.TabBar_Main>

    <com.example.pgg.qboxdemo.widget.TabBar_Main
        android:id="@+id/me_mains"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:icon="@drawable/tebbar_mains_my"
        app:name="@string/my">
    </com.example.pgg.qboxdemo.widget.TabBar_Main>

</LinearLayout>